{
  "name": "authzkit",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "build": "pnpm typecheck-all && pnpm -r --filter ./packages/* run build",
    "build-only": "pnpm -r --filter ./packages/* run build",
    "clean": "pnpm typecheck-all && pnpm -r --filter ./packages/* run clean",
    "typecheck": "pnpm --filter @authzkit/core run build && pnpm --filter @authzkit/prisma-tenant-guard run build && pnpm -r --filter \"./packages/*\" run typecheck",
    "typecheck-all": "pnpm typecheck",
    "lint": "pnpm typecheck-all && eslint .",
    "format": "pnpm typecheck-all && prettier --check .",
    "format:write": "pnpm typecheck-all && prettier --write .",
    "test": "pnpm typecheck-all && pnpm typecheck-all && vitest run --coverage",
    "dev": "pnpm typecheck-all && concurrently \"pnpm dev:packages\" \"pnpm dev:test\"",
    "dev:packages": "pnpm -r --parallel --stream --filter ./packages/* run dev",
    "dev:test": "pnpm typecheck-all && vitest watch",
    "docs:dev": "pnpm typecheck-all && vitepress dev docs",
    "docs:build": "pnpm typecheck-all && vitepress build docs",
    "docs:preview": "pnpm typecheck-all && vitepress preview docs",
    "release": "pnpm typecheck-all && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitest/coverage-v8": "^2.1.3",
    "concurrently": "^8.2.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "tsup": "^8.2.4",
    "typescript": "^5.6.3",
    "vitepress": "^1.6.4",
    "vitest": "^2.1.3",
    "jsdom": "^24.1.3"
  }
}
