{
  "name": "@authzkit/core",
  "version": "1.0.0-rc.19",
  "description": "Type-safe authorization policies that generate database filters and UI guards automatically",
  "keywords": [
    "authorization",
    "policy",
    "typescript",
    "javascript",
    "security",
    "rbac",
    "abac"
  ],
  "license": "Apache-2.0",
  "author": "AuthzKit Contributors",
  "homepage": "https://authzkit.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/authzkit/authzkit.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/authzkit/authzkit/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./zod": {
      "types": "./dist/zod.d.ts",
      "import": "./dist/zod.js",
      "require": "./dist/zod.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/zod.ts --format esm,cjs --dts",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "test": "vitest run",
    "dev": "tsup src/index.ts src/zod.ts --format esm,cjs --dts --watch"
  },
  "engines": {
    "node": ">=18.17"
  },
  "dependencies": {},
  "peerDependencies": {
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "zod": "^3.25.0"
  }
}
