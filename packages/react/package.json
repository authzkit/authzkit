{
  "name": "@authzkit/react",
  "version": "1.0.0-rc.19",
  "description": "React components for declarative authorization UI with type-safe policy decisions",
  "license": "Apache-2.0",
  "keywords": [
    "authorization",
    "react",
    "policy",
    "typescript",
    "javascript",
    "security",
    "components"
  ],
  "author": "AuthzKit Contributors",
  "homepage": "https://authzkit.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/authzkit/authzkit.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/authzkit/authzkit/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "test": "vitest run",
    "dev": "tsup src/index.tsx --format esm,cjs --dts --watch"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0"
  },
  "dependencies": {
    "@authzkit/core": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
